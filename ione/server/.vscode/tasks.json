{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Restart Sunstone WebServer",
            "type": "shell",
            "command": "ssh root@vcloud.support.by \"systemctl restart opennebula-sunstone && systemctl restart httpd\"",
            "problemMatcher": []
        },
        {
            "label": "Restart IONe server",
            "type": "shell",
            "command": "ssh root@vcloud.support.by ione server restart",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Start IONe server",
            "type": "shell",
            "command": "ssh root@vcloud.support.by ione server start"
        },
        {
            "label": "Stop IONe server",
            "type": "shell",
            "command": "ssh root@vcloud.support.by ione server stop"
        },
        {
            "label": "IONe Activities log last 100 lines",
            "type": "shell",
            "command": "ssh root@vcloud.support.by ione log 100",
            "problemMatcher": []
        },
        {
            "label": "IONe Debug log last 100 lines",
            "type": "shell",
            "command": "ssh root@vcloud.support.by ione debug 100"
        }
    ]
}