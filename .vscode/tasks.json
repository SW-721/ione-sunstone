    "version": "2.0.0",
    "tasks": [
        {
            "label": "Restart Sunstone WebServer",
            "type": "shell",
            "command": "ssh root@vcloud.support.by \"systemctl restart opennebula-sunstone && systemctl restart httpd\"",
            "problemMatcher": []
        },
        {
            "label": "Build Sunstone UI",
            "type": "shell",
            "command": "ssh root@vcloud.support.by \"cd /usr/lib/one/sunstone/public/ && grunt requirejs\"",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}