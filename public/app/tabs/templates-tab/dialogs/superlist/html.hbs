<div id="{{dialogId}}" class="reveal" data-reveal >
    <div class="row">
        <h3 id="dialog_header" class="subheader"></h3>
    </div>
    <form id="{{dialogId}}Form" action="" class="custom creation">
        <div class="row">
            <div class="large-12 columns">
                <input required type="text" id="{{dialogId}}input" name="name"/>
                <table id="{{dialogId}}_datatable" class="datatable hover">
                    <thead>
                    <tr>
                        <th>{{tr "Name"}}</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody id="tbody_{{dialogId}}_datatable">
                    </tbody>
                </table>
            </div>
        </div>
        <button class="close-button" data-close aria-label="{{tr "Close modal"}}" type="button">
        <span aria-hidden="true">&times;</span>
        </button>
    </form>
</div>
