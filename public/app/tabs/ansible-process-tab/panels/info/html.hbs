<div class="row">
  <div class="large-12 columns">
    <table class="dataTable">
      <thead>
        <tr>
          <th colspan="3">{{tr "Information"}}</th>
        </tr>
      </thead>
      <tbody>
        <style>
          td.key_td {
            font-weight: bold;
          }
        </style>
        <tr>
          <td class="key_td">{{tr "ID"}}</td>
          <td class="value_td">{{element.install_id}}</td>
          <td class="key_td">{{tr "Status"}}</td>
          <td class="value_td"><b>{{element.status}}</b></td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Playbook ID"}}</td>
          <td class="value_td">{{element.playbook_id}}</td>
          <td class="key_td">{{tr "Playbook Name"}}</td>
          <td class="value_td">{{element.playbook_name}}</td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Create time"}}</td>
          <td class="value_td">{{element.create_time}}</td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Start time"}}</td>
          <td class="value_td">{{element.start_time}}</td>
          <td class="key_td">{{tr "End time"}}</td>
          <td class="value_td">{{element.end_time}}</td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Process created by user"}}</td>
          <td class="value_td">{{element.uname}}</td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Comment"}}</td>
          <td class="value_td">{{{element.comment}}}</td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="lagre-12 columns">
    <table>
      <thead>
        <tr>
          <th colspan="3">{{tr "Hosts"}}</th>
        </tr>
      </thead>
      <thead>
        <tr>
          <th colspan="1">{{tr "VM ID"}}</th>
          <th colspan="1">{{tr "IP:Port"}}</th>
          <th colspan="1">{{tr "Status Codes"}}</th>
        </tr>
      </thead>
      <tbody id="tab-process-hosts"></tbody>
    </table>
  </div>
</div>
<script>
  console.log('HTML loaded');
</script>