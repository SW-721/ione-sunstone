<div>
  <form data-abide novalidate id="{{formPanelId}}Wizard" class="custom creation">
      <div class="lagre-12 columns">
          <div class="large-6 columns">
              <label for="Playbooks">
                  {{tr "Playbooks"}}
              </label>
              <select wizard_field="Playbooks" id="Playbooks" name="Playbooks">
                  <option value=""></option>
                  {{#each Playbooks}}
                  <option value="{{ANSIBLE.id}}">{{ANSIBLE.id}}:{{ANSIBLE.name}}</option>
                  {{/each}}
              </select>
          </div>
          <div class="large-6 column">
            <input type="checkbox" id="checkbox_sshkey" name="checkbox_sshkey">
            <label for="checkbox_sshkey">
                {{tr "Use SSH key for all"}}
            </label>
            <label for="Playbooks">
                {{tr "SSH Key"}}
            </label>
            <input name="ssh_key" id="ssh_key" type="text" value="">
          </div>
      </div>

    <div class="lagre-12 columns">
        <div class="tabs-content" data-tabs-content="{{formPanelId}}Tabs">
            <div id="tab-hostsTab" class="is-active tabs-panel">
                {{{VMTableHTML}}}
            </div>
        </div>
    </div>
  </form>
</div>
