<div>
  <form data-abide novalidate id="{{formPanelId}}Wizard" class="custom creation">
    <div class="large-6 columns">
      <div class="large-6 columns">
        <label for="name">{{tr "Name"}}</label>
        <input type="text" name="name" id="name" required />
      </div>
      <div class="large-12 columns">
        <label for="description">{{tr "Description"}}</label>
        <textarea name="description" id="description" />
      </div>
      <div class="large-6 columns">
        <label for="supported_os">{{tr "Supported OS"}}</label>
        <input type="text" name="supported_os" id="supported_os" />
      </div>
      <div class="medium-6 columns"></div>
    </div>
    <div class="large-6 columns">
      <div class="large-12 columns">
        <label for="body">{{tr "Body"}}</label>
        <textarea name="body" id="body" style="height: 400px" required />
      </div>
      <div class="large-4 columns">
        <button class="button secondary radius">{{tr "Check Syntax"}}</button>
      </div>
    </div>
  </form>
</div>