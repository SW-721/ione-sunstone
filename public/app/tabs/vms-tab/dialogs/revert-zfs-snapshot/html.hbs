<div id="{{dialogId}}" class="reveal small" data-reveal>
    <div class="row">
        <h3 class="subheader">
            {{tr "Machine recovery"}}
        </h3>
    </div>
    <div class="confirm-resources-header"></div>
    <div class="reveal-body">
        <form id="{{dialogId}}Form" action="">
            <div class="row">
                <div class="large-11 columns">
                    <br/>
                    <span>
                <span style="color: red;">
                    {{tr "Warning!"}}
                </span><br>
                {{tr "Virtual machine will be rebooted during the recovering!"}}<br>
                <span style="font-weight: bold">
                    {{tr "Important notice!"}}
                </span><br>
                {{tr "Backups are creating every day at 4:00 AM."}}
                <br>
                {{tr "50GB Disk Recovery taxes approximately 1 hour."}}
            </span>
                </div>
            </div>
            <br/>
            <div class="row">
                <div class="large-12 columns">
                    {{tr "Choose the backup for use:"}}
                    <ul class="menu simple">
                        <li>
                            <label class="left">
                                <input type="radio" name="provision_backup_radio" value="backup_yesterday">
                                {{tr "Yesterday"}}
                            </label>
                        </li>
                        <li>
                            <label class="left">
                                <input type="radio" name="provision_backup_radio" value="backup_today" checked>
                                {{tr "Today"}}
                            </label>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="form_buttons">
                <button class="button radius right success" type="submit">{{tr "OK"}}</button>
            </div>
            <button class="close-button" data-close aria-label="{{tr "Close modal"}}" type="button">
            <span aria-hidden="true">&times;</span>
            </button>
        </form>
    </div>
</div>







